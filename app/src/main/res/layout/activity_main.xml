<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="3"
        android:padding="20dp">

        <TextView
            android:id="@+id/tv_current"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginVertical="4dp"
            android:ellipsize="start"
            android:lines="3"
            android:maxLines="3"
            android:text=""
            android:textColor="@color/white"
            android:textSize="20sp"
            app:layout_constraintBottom_toTopOf="@id/tv_result"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/tv_result"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="44dp"
            android:lines="2"
            android:maxLines="2"
            android:text=""
            android:textColor="@color/number_color"
            android:textSize="20sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent" />
    </androidx.constraintlayout.widget.ConstraintLayout>


    <LinearLayout style="@style/styleRow">

        <Button
            style="@style/styleBtnOperator"
            android:text="History"
            android:textAllCaps="false"
            android:textSize="16sp"
            android:onClick="clickShowHistory"/>

        <Button
            style="@style/styleBtnOperator"
            android:text="%" />

        <Button
            style="@style/styleBtnOperator"
            android:onClick="clickBracket"
            android:text="(" />

        <Button
            style="@style/styleBtnOperator"
            android:onClick="clickBracket"
            android:text=")" />
    </LinearLayout>

    <LinearLayout style="@style/styleRow">

        <Button
            style="@style/styleBtnOperator"
            android:onClick="clickSqrt"
            android:text="sqrt"
            android:textAllCaps="false" />

        <Button
            style="@style/styleBtnOperator"
            android:text="^" />

        <Button
            style="@style/styleBtnOperator"
            android:text="*"
            android:textAllCaps="false" />

        <Button
            style="@style/styleBtnOperator"
            android:text="/" />
    </LinearLayout>

    <LinearLayout style="@style/styleRow">

        <Button
            style="@style/styleBtnNumber"
            android:text="7" />

        <Button
            style="@style/styleBtnNumber"
            android:text="8" />

        <Button
            style="@style/styleBtnNumber"
            android:text="9" />

        <Button
            style="@style/styleBtnOperator"
            android:text="+" />
    </LinearLayout>

    <LinearLayout style="@style/styleRow">

        <Button
            style="@style/styleBtnNumber"
            android:text="4" />

        <Button
            style="@style/styleBtnNumber"
            android:text="5" />

        <Button
            style="@style/styleBtnNumber"
            android:text="6" />

        <Button
            style="@style/styleBtnOperator"
            android:text="-"
            android:textStyle="bold" />
    </LinearLayout>

    <LinearLayout style="@style/styleRow">

        <Button
            style="@style/styleBtnNumber"
            android:text="1" />

        <Button
            style="@style/styleBtnNumber"
            android:text="2" />

        <Button
            style="@style/styleBtnNumber"
            android:text="3" />

        <Button
            style="@style/styleBtnOperator"
            android:onClick="clickUndo"
            android:text="âŒ«" />
    </LinearLayout>

    <LinearLayout style="@style/styleRow">

        <Button
            style="@style/styleBtnNumber"
            android:text="0" />

        <Button
            style="@style/styleBtnNumber"
            android:text="." />

        <Button
            style="@style/styleBtnOperator"
            android:onClick="clickClear"
            android:text="Clear"
            android:textAllCaps="false" />

        <Button
            style="@style/styleBtnOperator"
            android:onClick="clickEquals"
            android:text="=" />
    </LinearLayout>
</LinearLayout>